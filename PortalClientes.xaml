<Window x:Class="AccountantManager.PortalClientes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AccountantManager"
        mc:Ignorable="d"
        Title="Mis Clientes" Height="473" Width="800" ResizeMode="NoResize">
    <Grid Margin="0,0,0,3">
        <DataGrid Name="DGClientes" HorizontalAlignment="Left" Height="352" Margin="0,36,0,0" VerticalAlignment="Top" Width="521" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <Button Click="BtnEliminar_Click" Name="BtnEliminar" Content="Eliminar Cliente" HorizontalAlignment="Left" Height="25" Margin="84,397,0,0" VerticalAlignment="Top" Width="153"/>

        <Button Click="BtnAgregarCliente_Click" Name="BtnAgregarCliente" Content="Agregar Cliente" HorizontalAlignment="Left" Height="25" Margin="303,397,0,0" VerticalAlignment="Top" Width="153"/>
        <StatusBar Name="MiStatusBar" Height="27" Margin="0,427,0,0" VerticalAlignment="Top" Width="800">
            <StatusBarItem HorizontalAlignment="Right" Margin="0,0,0,0">
                <TextBlock Text="... " Name="MiTextBlock" HorizontalAlignment="Right"></TextBlock>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
